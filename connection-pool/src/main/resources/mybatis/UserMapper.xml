<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.sandinosanchez.connectionpool.dao.IUserDao">
    <resultMap id="UserMap" autoMapping="false" type="User">
        <id property="id" column="id"/>
        <result property="firstName" column="firstName"/>
        <result property="lastName" column="lastName"/>
        <result property="email" column="email"/>
        <association property="gender" resultMap="src/main/resources/mybatis/GenderMapper.xml"/>
        <collection property="posts" ofType="Post" resultMap="PostResult" columnPrefix="post_"/>
        <collection property="followers" ofType="Follower" resultMap="FollowerResult" columnPrefix="follower_"/>
        <collection property="direct_messages" ofType="DirectMessage" resultMap="DirectMessageResult" columnPrefix="direct_message_"/>
    </resultMap>
    <resultMap id="GenderResult" type="Gender">
        <id property="id" column="gender_id"/>
        <result property="name" column="name"/>
    </resultMap>
    <resultMap id="PostResult" type="Post">
        <id property="id" column="post_id"/>
        <result property="dateCreated" column="dateCreated" />
        <result property=""/>
    </resultMap>
    <resultMap id="FollowerResult" type="Follower">
    </resultMap>
    <resultMap id="DirectMessageResult" type="DirectMessage">
    </resultMap>
    <sql id="getUserTemplate">
        <![CDATA[
            SELECT u.id as id,
                   u.email as email,
                   u.password as password,
                   u.first_name as fistName,
                   u.last_name as lastName,
                   u.gender_id as gender_id,
            FROM Users u
        ]]>
    </sql>
    <select id="getById" resultMap="UserMap">
        <include refid="getUserTemplate"/>
        <![CDATA[
            LEFT JOIN Genders g on u.gender_id = g.id
            WHERE u.id = #{id}
        ]]>
    </select>
    <select id="getAll" resultMap="UserMap">
        <include refid="getUserTemplate"/>
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[INSERT INTO Users(firstName, lastName, email,
           password, gender_id) VALUES (#{firstName},#{lastName},#{email},
           #{password},#{gender_id})]]>
    </insert>
    <update id="updateById">
        <![CDATA[UPDATE Users
        <set>
            <if test="firstName != null">firstName=#{firstName},</if>
        </set>
        ]]>
    </update>

    <delete id="deleteById">
        <![CDATA[DELETE FROM Users WHERE id = #{id}]]>
    </delete>
</mapper>